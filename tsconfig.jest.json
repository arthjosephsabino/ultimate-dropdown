{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["jest", "node"],
    "isolatedModules": false,
    "module": "commonjs",              
    "moduleResolution": "node",        
    "jsx": "react-jsx"                 
  },
  "include": [
    "jest.setup.ts",
    "**/*.unit.ts",
    "**/*.unit.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}